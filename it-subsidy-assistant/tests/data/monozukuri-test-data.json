  "questionFlows": [
    {
      "categoryId": "通常枠",
      "questions": [
        {
          "id": "q1",
          "text": "開発する製品・サービスの革新性は？",
          "type": "radio",
          "options": [
            {"value": "breakthrough", "text": "業界初の技術・手法", "points": 4},
            {"value": "innovative", "text": "既存技術の革新的改良", "points": 3},
            {"value": "improved", "text": "既存製品の機能向上", "points": 2},
            {"value": "minor", "text": "既存製品の軽微な改良", "points": 1}
          ],
          "threshold": 3
        },
        {
          "id": "q2",
          "text": "期待される付加価値額の年平均成長率は？",
          "type": "number",
          "min": 0,
          "max": 50,
          "unit": "%",
          "threshold": 3.0
        }
      ],
      "judgmentLogic": "q1 >= 3 AND q2 >= 3.0"
    },
    {
      "categoryId": "回復型賃上げ・雇用拡大枠",
      "questions": [
        {
          "id": "q1",
          "text": "コロナ影響からの業況回復状況は？",
          "type": "radio",
          "options": [
            {"value": "recovering", "text": "回復傾向にある", "points": 3},
            {"value": "stable", "text": "安定している", "points": 2},
            {"value": "declining", "text": "まだ厳しい", "points": 1}
          ],
          "threshold": 2
        },
        {
          "id": "q2",
          "text": "賃上げ計画の給与支給総額増加率は？",
          "type": "number",
          "min": 0,
          "max": 20,
          "unit": "%",
          "threshold": 1.5
        }
      ],
      "judgmentLogic": "q1 >= 2 AND q2 >= 1.5"
    },
    {
      "categoryId": "デジタル枠",
      "questions": [
        {
          "id": "q1",
          "text": "DX推進の取り組み内容は？",
          "type": "checkbox",
          "options": [
            {"value": "ai_ml", "text": "AI・機械学習"},
            {"value": "iot", "text": "IoT"},
            {"value": "cloud", "text": "クラウド"},
            {"value": "data_analytics", "text": "データ分析"},
            {"value": "automation", "text": "自動化・RPA"}
          ],
          "minSelections": 1
        }
      ],
      "judgmentLogic": "q1.length >= 1"
    }
  ],
